{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    // 移除 types 配置或者修改为您需要的其他类型
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "outDir": "dist/ts",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["dist", "target", "node_modules"]
}
